{
  "parser": "babel-eslint",
  "globals": {
    "SystemJS": true
  },
  "env": {
    "browser": true
  },
  "extends": ["airbnb-base", "airbnb-base/rules/strict", "airbnb/rules/react", "prettier", "prettier/react"],
  "rules": {
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off",
    "no-alert": "warn",
    "no-console": [
      "warn",
      {
        "allow": ["info", "error"]
      }
    ],
    "import/no-extraneous-dependencies": "off",
    "no-unused-vars": "warn",
    "react/no-unused-prop-types": "warn",
    "react/self-closing-comp": "warn",
    "react/prefer-stateless-function": "off"
  }
}
